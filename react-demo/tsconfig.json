{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "/dist/",
        "sourceMap": true,
        "module": "es2022",
        "allowSyntheticDefaultImports": true, // import忽略报错
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "target": "ES5",
        "allowJs": true,
        "jsx" : "react",
        "typeRoots": ["src/@types", "./node_modules/@types"],
        "paths": {
            "@/*" : ["*"]
        }
    },
    "include": [
        "./src/**/*",
        "./externals.d.ts",
        "react-demo/global.d.ts"
    ],
    "exclude": ["node_modules", "src/@tyoes/**/*", "*.less"]
}